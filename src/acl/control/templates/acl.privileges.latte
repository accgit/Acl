
{* roles privileges *}
<div class="wrapping">

	{* flash message *}
	{snippet message}
	<div class="wrapping">
		<p n:foreach="$flashes as $flash" class="message {$flash->type}">{$flash->message}</p>
	</div>
	{/snippet}

	{* title *}
	<p class="heading">
		<a href="#" id="modal-privileges" class="modal">Akce a signály</a>
	</p>

	{* factory *}
	{snippet factory}
	<div id="simplemodal-privileges" class="screen reader">
		{snippet errors}
			{form factory class => 'ajax'}
				<h3>Akce a signály</h3>
				<ul class="errors" n:if="$form->hasErrors()">
					<li n:foreach="$form->errors as $error">{$error}</li>
				</ul>
				{input name class => 'full width'}
				<div class="row">
					<div class="six columns">
						{input send class => 'button primary full width'}
					</div>
					<div class="six columns">
						<a class="button common full width simplemodal-close">Zrušit</a>
					</div>
				</div>
			{/form}
		{/snippet}
	</div>
	{/snippet}

	{* items *}
	{snippet items}
	{if count($items)}
	<div class="tree">
		<ul>
			<li n:foreach="$items as $item">
				<span class="name">{$item->name}</span>
				<span class="float right">
					<a n:href="edit!, $item->privilegeId" class="link ajax"><i class="fa fa-pencil" aria-hidden="true"></i></a>
					<a n:href="delete!, $item->privilegeId" class="link ajax"><i class="fa fa-times" aria-hidden="true"></i></a>
				</span>
			</li>
		</ul>
	</div>
	{else}
		<p class="na">n/a</p>
	{/if}
	{/snippet}
</div>
