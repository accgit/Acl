
{* roles resources *}
<div class="wrapping">

	{* flash message *}
	{snippet message}
	<div class="wrapping">
		<p n:foreach="$flashes as $flash" class="message {$flash->type}">{$flash->message}</p>
	</div>
	{/snippet}

	{* title *}
	<p class="heading">
		<a href="#" id="modal-3" class="modal">Zdroje</a>
	</p>

	{* factory *}
	{snippet factory}
	<div id="simplemodal-3" class="screen reader">
		{form factory class => 'ajax'}
			<h3>Zdroje</h3>
			{snippet errors}
			<ul class="errors" n:if="$form->hasErrors()">
				<li n:foreach="$form->errors as $error">{$error}</li>
			</ul>
			{/snippet}
			{input name class => 'full width'}
			{input send class => 'button primary'}
		{/form}
		<span class="simplemodal-close">
			<a href="#" class="modal-close" title="Zavřít">
				<i class="fa fa-times" aria-hidden="true"></i>
			</a>
		</span>
	</div>
	{/snippet}

	{* items *}
	{snippet items}
	{if count($items)}
	<div class="tree">
		<ul>
			<li n:foreach="$items as $item">
				<span class="name">{$item->name}</span>
				<span class="float right">
					<a n:href="edit!, $item->resourceId" class="link ajax"><i class="fa fa-pencil" aria-hidden="true"></i></a>
					<a n:href="delete!, $item->resourceId" class="link ajax"><i class="fa fa-times" aria-hidden="true"></i></a>
				</span>
			</li>
		</ul>
	</div>
	{else}
		<p class="na">n/a</p>
	{/if}
	{/snippet}
</div>
