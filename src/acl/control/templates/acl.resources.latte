
{* roles resources *}
<div class="wrapper">

	{* title *}
	<p class="heading">
		<a href="#" id="form-3" class="toggle">{_'acl.resource'}</a>
	</p>

	{* factory *}
	{snippet factory}
	<div class="screen reader toggle-3">
		{form factory class => 'ajax'}
			{snippet errors}
			<ul class="errors" n:if="$form->hasErrors()">
				<li n:foreach="$form->errors as $error">{$error}</li>
			</ul>
			{/snippet}
			<div class="wrapper">{input name}</div>
			{input send class => 'button primary'}
		{/form}
	</div>
	{/snippet}

	{* items *}
	{snippet items}
	{if count($items)}
	<div class="tree">
		<ul>
			<li n:foreach="$items as $item">
				<span class="name">{$item->name}</span>
				<span class="float left">
					<a n:href="edit!, $item->resourceId" class="link ajax"><i class="fa fa-pencil" aria-hidden="true"></i></a>
					<a n:href="delete!, $item->resourceId" class="link ajax"><i class="fa fa-times" aria-hidden="true"></i></a>
				</span>
			</li>
		</ul>
	</div>
	{/if}
	{/snippet}
</div>
