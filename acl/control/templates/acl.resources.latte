
{include '@acl.latte'}
<div class="wrapping">
	{form resources}
		<ul class="errors" n:if="$form->hasErrors()">
			<li n:foreach="$form->errors as $error">{$error}</li>
		</ul>
		<fieldset>
			<legend>Zdroje</legend>
			{input name class => 'full width'}
			{input send class => 'button primary'}
		</fieldset>
	{/form}
</div>
<table n:if="count($resources)">
	<tr>
		<th>Zdroje</th>
		<th colspan="2">&nbsp;</th>
	</tr>
	<tr n:foreach="$resources as $row" class="default">
		<td style="width: 370px;">{$row->name}</td>
		<td style="width: 80px;">
			<a href="{link edit!, $row->resourceId}" title="Upravit" class="action">
				<i class="fa fa-pencil" aria-hidden="true"></i>
			</a>
			<a href="{link delete!, $row->resourceId}" title="Smazat" class="action">
				<i class="fa fa-times" aria-hidden="true"></i>
			</a>
		</td>
	</tr>
</table>
